# KandyPack Logistics Platform - Backend Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password_here
MYSQL_DATABASE=kandypack_db

# JWT Configuration
# Generate a secure secret key using: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173,http://127.0.0.1:3000

# Application Settings
APP_NAME=KandyPack Logistics API
APP_VERSION=1.0.0

# Production Notes:
# - Never commit the .env file to version control
# - Use strong, randomly generated SECRET_KEY
# - Set DEBUG=False in production
# - Update ALLOWED_ORIGINS with your production domain
# - Use environment-specific values for each deployment
